<%- model_class = Playlist -%>
<div class="page-header">
  <h1><%=t '.title', :default => "提供プレイリスト詳細" %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @playlist.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:channel_id) %>:</strong></dt>
  <dd><%= @playlist.channel_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:play_start_date) %>:</strong></dt>
  <dd><%= @playlist.play_start_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:play_end_date) %>:</strong></dt>
  <dd><%= @playlist.play_end_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:release_date) %>:</strong></dt>
  <dd><%= @playlist.release_date %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              playlists_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_playlist_path(@playlist), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              playlist_path(@playlist),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
