<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title">検索</div>
  </div>
  <div class="panel-body">
    <%= search_form_for(@q, url: action_path, wrapper: "horizontal_form", html: { method: :get, class: 'form-horizontal', role: 'form' }) do |f| %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.input :name_cont, label: "プレイリスト名", input_wrapper_html: { class: "col-xs-8" }, class: 'form-control' %>
        </div>
        <div class="col-sm-6">
          <%= f.input :channel_name_cont, label: "チャネル名", input_wrapper_html: { class: "col-xs-8" }, class: 'form-control' %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <%= f.input :play_start_date_gteq, label: "放映開始日", as: :date_picker, input_wrapper_html: { class: "col-xs-6" }, class: 'form-control' %>
        </div>
        <div class="col-sm-6">
          <%= f.input :play_end_date_lteq, label: "放映終了日", as: :date_picker, input_wrapper_html: { class: "col-xs-6" }, class: 'form-control' %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <%= f.input :release_date_gteq, label: "公開日", as: :date_picker, input_wrapper_html: { class: "col-xs-6" }, class: 'form-control' %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <div class="actions">
            <%= f.submit "検索", :class => 'btn btn-primary' %>
            <%= link_to 'クリア', url_for, class: "btn btn-default" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>