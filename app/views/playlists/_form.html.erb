<%= simple_form_for @playlist, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@playlist[:name]) %>
  <%= f.input :channel_id, as: :select, required: true, collection: Channel.order(:id).map{|c| [c.name,c.id]} %>
  <%= error_span(@playlist[:channel_id]) %>
  <%= f.input :play_start_date, as: :date_picker %>
  <%= error_span(@playlist[:play_start_date]) %>
  <%= f.input :play_start_date, as: :date_picker %>
  <%= error_span(@playlist[:play_end_date]) %>
  <%= f.input :release_date, as: :date_picker %>
  <%= error_span(@playlist[:release_date]) %>
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                playlists_path, :class => 'btn btn-default' %>
<% end %>
