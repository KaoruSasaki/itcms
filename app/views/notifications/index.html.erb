<%- model_class = Notification -%>
<div class="page-header">
  <h1><%=t '.title', :default => [:'helpers.titles.index', '%{model}一覧'], :model => model_class.model_name.human.titleize %></h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:text) %></th>
      <th><%= model_class.human_attribute_name(:updated_at) %></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @notifications.each do |notification| %>
      <tr>
        <td><%= notification.text %></td>
        <td><%=l notification.updated_at %></td>
        <td></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      notification_path(notification), :class => 'btn btn-default btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_notification_path,
            :class => 'btn btn-primary' %>
