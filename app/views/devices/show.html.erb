<%- model_class = Device -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @device.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:owner_id) %>:</strong></dt>
  <dd><%= @device.owner_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:display_frame_id) %>:</strong></dt>
  <dd><%= ftrame_type_name(@device.display_frame_id) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:temporary_content_url) %>:</strong></dt>
  <dd><%= @device.temporary_content_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:emergency_message) %>:</strong></dt>
  <dd><%= @device.emergency_message %></dd>
  <dt><strong><%= model_class.human_attribute_name(:play_volume) %>:</strong></dt>
  <dd><%= @device.play_volume %></dd>
  <dt><strong><%= model_class.human_attribute_name(:call_volume) %>:</strong></dt>
  <dd><%= @device.call_volume %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              devices_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_device_path(@device), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              device_path(@device),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
