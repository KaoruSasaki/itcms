<%- model_class = DisplayFrame -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @display_frame.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:frame_pattern) %>:</strong></dt>
  <dd><%= @display_frame.frame_pattern %></dd>
  <dt><strong><%= model_class.human_attribute_name(:image_url) %>:</strong></dt>
  <dd><%= @display_frame.image_url %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              display_frames_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_display_frame_path(@display_frame), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              display_frame_path(@display_frame),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
