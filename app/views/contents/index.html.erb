<%- model_class = Content -%>
<div class="page-header">
  <h1><%=t '.title', :default => "コンテンツ一覧" %></h1>
</div>

<div>
  <%= render :partial => 'search_form', locals: {action_path: contents_path, check_flag: @check_flag} %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>コンテンツ名</th>
      <th>種別</th>
      <th>タグ</th>
      <th>更新日</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @contents.each do |content| %>
      <tr>
        <td><%= content.name %></td>
        <td><%= content_type_name(content.type) %></td>
        <td><%= content.content_tags.map{|ct| ct.tag.name}.join(',') %></td>
        <td><%= display_date(content.created_at) %></td>
        <td></td>
        <td></td>
        <td></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      content_path(content), :class => 'btn btn-default btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="container">
  <%= link_to "新規登録",
      new_content_path,
      :class => 'btn btn-primary' %>
</div>