<%- model_class = Content -%>
<div class="page-header">
  <h1><%=t '.title', :default => "コンテンツ詳細" %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:type) %>:</strong></dt>
  <dd><%= @content.type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @content.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:url) %>:</strong></dt>
  <dd><%= @content.url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:validity_start_date) %>:</strong></dt>
  <dd><%= DateTime.parse(@content.validity_start_date).strftime('%Y/%m/%d') %></dd>
  <dt><strong><%= model_class.human_attribute_name(:validity_end_date) %>:</strong></dt>
  <dd><%= DateTime.parse(@content.validity_end_date).strftime('%Y/%m/%d') %></dd>
  <dt><strong><%= model_class.human_attribute_name(:enabled) %>:</strong></dt>
  <dd><%= @content.enabled ? "有効" : "無効" %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              contents_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_content_path(@content), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              content_path(@content),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
